pipeline {
    agent any

    environment {
        JAVA_HOME = '/usr/lib/jvm/java-11-openjdk'  // Set JAVA_HOME to point to the JDK
        MAVEN_HOME = '/opt/maven'
        PATH = "${MAVEN_HOME}/bin:${JAVA_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'mvn clean install'  // Build the application with Maven
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'  // Run tests
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                sh 'scp target/your-app.jar ubuntu@<EC2-IP>:/home/ubuntu/your-app.jar'
                sh 'ssh ubuntu@<EC2-IP> "java -jar /home/ubuntu/your-app.jar"'  // Run the app on the EC2 instance
            }
        }
    }
}

